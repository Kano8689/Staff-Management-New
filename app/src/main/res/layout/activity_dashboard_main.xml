<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DashboardMain"
    android:background="#0A2241">

    <ImageView
        android:id="@+id/bg_white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/offWhite"
        android:layout_marginTop="150dp"/>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/btnss"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="180dp"
        android:layout_marginBottom="50dp">

        <!-- First Horizontal Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_margin="5dp"
            android:gravity="center">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1">

                <ImageButton
                    android:id="@+id/project_task"
                    android:layout_width="190dp"
                    android:layout_height="190dp"
                    android:layout_margin="7dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/project_task"
                    android:layout_gravity="center"/>
            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1">

                <ImageButton
                    android:id="@+id/attedence"
                    android:layout_width="190dp"
                    android:layout_height="190dp"
                    android:layout_margin="7dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/attendence"
                    android:layout_gravity="center"/>
            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1">

                <ImageButton
                    android:id="@+id/salary_detail"
                    android:layout_width="190dp"
                    android:layout_height="190dp"
                    android:layout_margin="7dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/attendence"
                    android:layout_gravity="center"/>
            </FrameLayout>
        </LinearLayout>

        <!-- Second Horizontal Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_margin="5dp"
            android:gravity="center">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1">

                <ImageButton
                    android:id="@+id/task_done"
                    android:layout_width="190dp"
                    android:layout_height="190dp"
                    android:layout_margin="7dp"
                    android:src="@drawable/task_done"
                    android:background="@android:color/transparent"
                    android:layout_gravity="center"/>
            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1">

                <ImageButton
                    android:id="@+id/leaves"
                    android:layout_width="190dp"
                    android:layout_height="190dp"
                    android:layout_margin="7dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/leave"
                    android:layout_gravity="center"/>
            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1">

                <ImageButton
                    android:id="@+id/team"
                    android:layout_width="190dp"
                    android:layout_height="190dp"
                    android:layout_margin="7dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/team"
                    android:layout_gravity="center"/>
            </FrameLayout>
        </LinearLayout>

    </androidx.appcompat.widget.LinearLayoutCompat>


</androidx.constraintlayout.widget.ConstraintLayout>